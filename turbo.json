{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@coop-super-app/branch-portal#build": {
      "dependsOn": ["^build","^lint"],
      "outputs": [".next/**"],
      "env": [
        "NEXTAUTH_SECRET",
        "NEXT_PUBLIC_WEBSITE_URL",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "@coop-super-app/branch-portal#lint": {
      "dependsOn": ["lib#lint","ui#lint"]
    }
  }
}
